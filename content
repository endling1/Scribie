	<script>
		// toggle viewport settings to allow responsive mobile sizes, but a scaled 1240 window for tablet landscape
		var ipad = false;
		var ipad_iOS6 = false;
		if (navigator.userAgent.match(/iPad/i)) {
			 ipad = true;
			 if (window.FileReader) {
			 	ipad_iOS6 = true;
			}
		}
		
		var viewportmeta = document.querySelector('meta[name="viewport"]');
		var viewporttimer;
		
		var prev_width = 0;
		var prev_width_counter = 0;
		var width_standard = 'innerWidth';
		
		viewportmeta.content = 'width=device-width, initial-scale=1, maximum-scale=1'; // reset to detect device width
		if (window.innerWidth > window.outerWidth) { // test for inconsistencies (i.e., Android)
			width_standard = 'outerWidth';
		}

		if (viewportmeta && window[width_standard] < 1024) {
			viewportmeta.content = 'width=device-width, initial-scale=1, maximum-scale=5';
		}
		function viewportCheck(platform) {
			platform = platform || null;
			if (ipad_iOS6 || platform != 'apple') {
				viewportmeta.content = 'width=device-width, initial-scale=1, maximum-scale=1'; // reset to detect device width
				// only clear the timer if Android triggered events properly
				if (window[width_standard] != prev_width || prev_width_counter > 2) {
					clearInterval(viewporttimer);
					prev_width = window[width_standard];
					prev_width_counter = 0;
				}
				else {
					prev_width_counter++;
				}
				// landscape mode 
				if (viewportmeta && window[width_standard] >= 1024) {
					viewportmeta.content = 'width=1240, initial-scale=0.825, maximum-scale=5';
				}
				else {
					viewportmeta.content = 'width=device-width, initial-scale=1, maximum-scale=5';
				}
			}
			else if (ipad) {
				viewporttimer = setInterval(viewportCheck,200);
				//viewportmeta.content = 'width=1240, maximum-scale=5';
			}
			
		}
		// trigger on orientationchange for iOS, but add a 400ms delay for other devices
		if (navigator.userAgent.match(/iPhone|iPad|iPod/)) {
			viewportCheck('apple');
			window.addEventListener("orientationchange", function() {
				viewportCheck('apple')
			});
		}
		else {
			viewportCheck('non-apple');
			window.addEventListener("orientationchange", function() {
				viewporttimer = setInterval(viewportCheck,400);
			});
		}
		
	</script>

