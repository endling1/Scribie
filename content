	<script>
	function delayedPlayerLoad() {
		kWidget.embed({
		  "targetId": "kplayer_CornellCast_player",
		  "wid": "_537811",
		  "uiconf_id": 10478211,
		  "flashvars": {
		  	
		    "streamerType": "rtmp",
		    "mediaProtocol": "rtmp",
			"asyncInit": "true",
			"externalInterfaceDisabled": "false",
			"allowScriptAccess": "always"
		  },
		  "cache_st": 1373384948,
		  "entry_id": "1_zaatpsw0"
		});
	}

	// Add a listener to ensure the player is loaded, else autoplay setting won't be honored and start and end times won't be applied.
	var checkForPlayer = window.setInterval(function() {
		if (kWidget) {
			window.clearInterval(checkForPlayer);
			delayedPlayerLoad();
		}
	}, 200);

	// The next line is needed to ensure iOS shows the player - it seems to be hidden after it's loaded and/or its containing iFrame is set to zero width when it's generated.
	//setTimeout('$("#CornellCast_player_ifp").width("100%").height("100%").show()', 500);
