<script>
	$(function() {
		var pull 		= $('.pull-navigation');
			menu 		= $('nav.primary-menu');
			menuHeight	= menu.height();

		$(pull).on('click', function(e) {
			e.preventDefault();
			menu.slideToggle();
		});

		$(window).resize(function(){
			var w = $(window).width();
			if (w > 320 && menu.is(':hidden')) {
				menu.removeAttr('style');
			}	
		});
	});
		
</script>

